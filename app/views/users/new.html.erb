<h1>Sign up</h1>

<div class="row">
    <div class="row">
    <div class="col-md-6 col-md-offset-3">
         <%= form_for(@user, html:{class: "form-horizontal"})  do |f| %>
        
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
        
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
        
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
        
        <%= f.label :passowrd_confirmation %>
        <%= f.password_field :passowrd_confirmation, class: 'form-control' %>
        
        <%= f.submit "Create my account", class: "btn btn-primary btn-large" %>
    <% end %>
    

    </div>
  
</div>
