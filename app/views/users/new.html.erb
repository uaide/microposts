<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %> 
        
            <%= f.label :name %>
            <%= f.text_field :name %>
            
            <%= f.label :email %>
            <%= f.text_field :email%>
            
            <%= f.label :password %>
            <%= f.password_field :password %>
            
            <%= f.label :passowrd_confirmation, "Confirmaition" %>
            <%= f.password_field :passowrd_confirmation %>
            
            <%= f.submit "Create my account", class: "btn-large btn-primary" %>
        
        <% end %>
        
    </div>    
</div>
