<h1>プロフィールの編集</h1>
<%= form_for(@user, html:{class: "form-horizontal"})  do |f| %>
    <div class="form-group">
        <div class="col-sm-1">
        </div>
        <label for="user_name" class ="col-sm-2 control-label">名前：</label>
        <div class="col-sm-5">
            <%= f.text_field :name,class: "form-control",id:"user_name" %>
        </div>
        <div class="col-sm-4">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-1">
        </div>
        <label for="user_email" class ="col-sm-2 control-label">メール：</label>
        <div class="col-sm-5">
             <%= f.text_field :email,class: "form-control",id:"user_email" %>    
        </div>
        <div class="col-sm-4">
        </div>
    </div>
    <div class="form-group">    
        <div class="col-sm-1">
        </div>
        <label for="user_area" class ="col-sm-2 control-label">地域：</label>
        <div class="col-sm-5">
            <%= f.text_field :area,class:"form-control",id:"user_area" %>
        </div>
        <div class="col-sm-4">
        </div>
    </div>
    <div class="form-group">    
        <div class="col-sm-1">
        </div>
        <label for="user_greet" class ="col-sm-2 control-label">あいさつ：</label>
        <div class="col-sm-5">
            <%= f.text_area :greet,class:"form-control",id:"user_greet" %>
        </div>
        <div class="col-sm-4">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-4">
            <%= f.submit class: "btn btn-sm btn-primary" %>
        </div>
    </div>
<% end %>